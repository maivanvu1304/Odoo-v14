<odoo>
  <record id="view_warranty_close_wizard_form" model="ir.ui.view">
    <field name="name">warranty.close.wizard.form</field>
    <field name="model">warranty.close.wizard</field>
    <field name="arch" type="xml">
      <form string="Close Ticket">
        <group>
          <field name="ticket_id" readonly="1"/>
          <field name="closing_note" placeholder="Describe what was done..."/>
        </group>
        <footer>
          <button string="Close Ticket" type="object" name="action_confirm" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
