<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Close Wizard Form View -->
    <record id="view_warranty_close_wizard_form" model="ir.ui.view">
        <field name="name">warranty.close.wizard.form</field>
        <field name="model">warranty.close.wizard</field>
        <field name="arch" type="xml">
            <form string="Close Warranty Ticket">
                <group>
                    <field name="ticket_id"/>
                    <field name="close_reason" widget="radio"/>
                    <field name="close_date"/>
                    <field name="notes" placeholder="Enter detailed notes about the resolution..."/>
                </group>
                <footer>
                    <button name="action_close_ticket" 
                            string="Close Ticket" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open Close Wizard -->
    <record id="action_warranty_close_wizard" model="ir.actions.act_window">
        <field name="name">Close Warranty Ticket</field>
        <field name="res_model">warranty.close.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_warranty_ticket"/>
        <field name="context">{'default_ticket_id': active_id}</field>
    </record>

</odoo>
