<odoo>
  <record id="view_warranty_partner_tree" model="ir.ui.view">
    <field name="name">warranty.partner.tree</field>
    <field name="model">warranty.partner</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="phone"/>
        <field name="email"/>
        <field name="warranty_level"/>
        <field name="warranty_end_date"/>
      </tree>
    </field>
  </record>

  <record id="view_warranty_partner_form" model="ir.ui.view">
    <field name="name">warranty.partner.form</field>
    <field name="model">warranty.partner</field>
    <field name="arch" type="xml">
      <form string="Warranty Partner">
        <sheet>
          <group>
            <field name="name"/>
            <field name="is_company"/>
            <field name="phone"/>
            <field name="mobile"/>
            <field name="email"/>
          </group>
          <group string="Warranty">
            <field name="warranty_level"/>
            <field name="warranty_start_date"/>
            <field name="warranty_end_date"/>
            <field name="warranty_note"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_warranty_partner_search" model="ir.ui.view">
    <field name="name">warranty.partner.search</field>
    <field name="model">warranty.partner</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
        <field name="phone"/>
        <field name="email"/>
        <field name="warranty_level"/>
      </search>
    </field>
  </record>

  <record id="action_warranty_partner" model="ir.actions.act_window">
    <field name="name">Warranty Partners</field>
    <field name="res_model">warranty.partner</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem
    id="menu_warranty_partners"
    name="Warranty Partners"
    parent="menu_warranty_root"
    action="action_warranty_partner"
    sequence="15"/>
</odoo>
